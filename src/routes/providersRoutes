const { uploadStorage } = require("../middlewares/multer");
const express = require("express");
const router = express.Router();
const providersController = require("../controller/providersController");
const authMiddleware = require("../middlewares/authMiddleware");

router.delete('/:providerId',authMiddleware ,providersController.deleteProvider);
router.post('/createProvider', uploadStorage.single("image"),authMiddleware ,providersController.createProvider);
router.get('/getAllproviders',authMiddleware ,providersController.getAllProviders);
router.patch('/:providerId',  authMiddleware,providersController.updateProvider);



module.exports = router;
